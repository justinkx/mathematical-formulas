{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "react-native chat rest-api",
    "description": "A minimal nodejs express mongoose powered backend for a chat app in React-Native",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication for login and generating JW token"
    },
    {
      "name": "Un-Authenticated Apis",
      "description": "Apis Open To All Users"
    },
    {
      "name": "Authenticated Apis",
      "description": "Apis Open To Admin"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "authentication": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/user": {
      "get": {
        "tags": [
          "Authenticated Apis"
        ],
        "description": "get all users",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "security": [{
          "authentication": []
        }],
        "responses": {}
      }
    },
    "/user/authenticate": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "description": "Authenticate User",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/user/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "description": "New user Registration",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "firstName",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "lastName",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "email",
            "in": "formData",
            "type": "string",
            "format": "email",
            "required": true
          },
          {
            "name": "password",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "mobileNumber",
            "in": "formData",
            "type": "number",
            "required": true
          }],
        "responses": {}
      }
    },
    "/user/{userId}": {
      "get": {
        "tags": [
          "Authenticated Apis"
        ],
        "description": "get users of given id",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "security": [
          {
            "authentication": []
          }
        ],
        "responses": {}
      }
    },
    "/get/categories": {
      "get": {
        "tags": [
          "Un-Authenticated Apis"
        ],
        "description": "Get all categories",
      "produces": [
        "application/json",
        "application/xml"
      ],
      "responses": {}
      }
    },
    "/post/categories": {
      "post": {
        "tags": [
          "Authenticated Apis"
        ],
        "description": "create new category",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "security": [{
          "authentication": []
        }],
        "parameters": [
          {
            "name": "name",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "quote",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "image",
            "in": "formData",
            "type": "string",
            "required": false
          }],
        "responses": {}
      }
    },
    "/post/categories/{categoryId}": {
      "post": {
        "tags": [
          "Authenticated Apis"
        ],
        "description": "Update Category of given id",
        "security": [{
          "authentication": []
        }],
        "parameters": [
          {
            "name": "categoryId",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "name",
            "in": "formData",
            "type": "string",
            "required": true
          }
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "responses": {}
      }
    }
  }
}